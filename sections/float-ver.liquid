{% style %}
  .main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0;
    padding: 0 1rem;
    height: 60rem;
    background-color: #fea63e;
    color: white;
  }
  .main-details-wrapper {
    width: 46%;
    display: flex;
    justify-content: center;
  }
  .main-details {
    max-width: 70rem;
    padding: 5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .main-details > h1 {
    color: white;
    margin: 0;
  }
  .main-details > div {
    border-bottom: 1px solid white;
    padding: 1rem;
  }
  .main-details > p {
    margin: 0;
  }
  .main-details > button {
    margin: 1rem 0;
    padding: 1rem;
    border-radius: 8px;
    border: none;
    font-weight: 700;
    font-size: large;
    color: #c28336;
  }
  .main-details > img {
    width: 25rem;
    align-self: center;
  }
  input[type='radio'] {
    accent-color: #000;
  }
  .float-ver-container {
    display: flex;
    gap: 1.5rem;
    height: 60rem;
    max-width: 54%;
    overflow: hidden;
  }
  .float-ver-container:hover div {
    animation-play-state: paused;
  }
  .float-ver-wrapper {
    display: flex;
    flex-direction: column;
    animation-name: yticker;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    animation-duration: 8s;
  }
  .float-ver-wrapper.reverse {
    animation-name: yticker-reverse;
  }
  .float-ver-wrapper.slow {
    animation-duration: 10s;
  }
  .float-ver-img {
    height: 32rem;
    margin-top: 1.5rem;
    border-radius: 15px;
  }
  @keyframes yticker {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(0, -67rem, 0);
    }
  }
  @keyframes yticker-reverse {
    0% {
      transform: translate3d(0, -67rem, 0);
    }
    100% {
      transform: translate3d(0, 0, 0);
    }
  }
{% endstyle %}